<PropertyList>

  <path>stiletto.ac</path>

  <animation>
    <!-- Objets opaques -->
    <object-name>fuselage</object-name>
    <object-name>dessus</object-name>
    <object-name>trappe</object-name>
    <object-name>interieur</object-name>
    <object-name>aile</object-name>
    <object-name>aileronG</object-name>
    <object-name>aileronD</object-name>
    <object-name>voletG</object-name>
    <object-name>voletD</object-name>
    <object-name>profondeur</object-name>
    <object-name>derive</object-name>
    <object-name>direction</object-name>
    <object-name>axeA</object-name>
    <object-name>axeB</object-name>
    <object-name>roueA</object-name>
    <object-name>porteA</object-name>
    <object-name>axeGH</object-name>
    <object-name>axeGB</object-name>
    <object-name>roueG</object-name>
    <object-name>axeDH</object-name>
    <object-name>axeDB</object-name>
    <object-name>roueD</object-name>
    <object-name>siege</object-name>
    <object-name>pilote</object-name>
    <object-name>manche</object-name>
    <object-name>porteBG</object-name>
    <object-name>porteHG</object-name>
    <object-name>porteBD</object-name>
    <object-name>porteHD</object-name> 

    <!-- Objets transparents -->
    <object-name>vitre</object-name>
  </animation>

  <animation>
    <type>noshadow</type>
    <object-name>vitre</object-name>
  </animation>

  <!-- Planches de bord -->
  <model>
    <path>Aircraft/Stiletto/Models/Panel/panel.xml</path>
    <offsets>
      <x-m> -2.843 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.493 </z-m>
    </offsets>
  </model>

  <!-- Pilote invisible depuis le cockpit -->
  <animation>
    <type>select</type>
    <object-name>pilote</object-name>
    <condition>
      <greater-than>
        <property>sim/current-view/view-number</property>
        <value>0</value>
      </greater-than>
    </condition>
  </animation>

  <!-- Gouverne de profondeur -->
  <animation>
    <type>rotate</type>
    <object-name>profondeur</object-name>
    <property>controls/flight/elevator</property>
    <factor>15</factor>
    <center>
      <x-m> 8.666 </x-m>
      <y-m> 0.000 </y-m>
      <z-m> 0.272 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Gouverne de direction -->
  <animation>
    <type>rotate</type>
    <object-name>direction</object-name>
    <property>controls/flight/rudder</property>
    <factor>30</factor>
    <axis>
      <x1-m> 9.292 </x1-m>
      <y1-m> 0.000 </y1-m>
      <z1-m> 0.530 </z1-m>
      <x2-m> 9.797 </x2-m>
      <y2-m> 0.000 </y2-m>
      <z2-m> 1.563 </z2-m>
    </axis>
  </animation>

  <!-- Animations des ailerons -->
  <animation>
    <type>rotate</type>
    <object-name>aileronG</object-name>
    <property>surface-positions/left-aileron-pos-norm</property>
    <factor> 15.0 </factor>
    <center>
      <x-m>  3.514 </x-m>
      <y-m> -2.911 </y-m>
      <z-m> -0.692 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>aileronD</object-name>
    <property>surface-positions/right-aileron-pos-norm</property>
    <factor> 15.0 </factor>
    <center>
      <x-m>  3.514 </x-m>
      <y-m>  2.911 </y-m>
      <z-m> -0.692 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Volets -->
  <animation>
    <type>rotate</type>
    <object-name>voletG</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>40.0</factor>
    <center>
      <x-m>  3.515 </x-m>
      <y-m> -1.724 </y-m>
      <z-m> -0.705 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <animation>
    <type>rotate</type>
    <object-name>voletD</object-name>
    <property>surface-positions/flap-pos-norm</property>
    <factor>40.0</factor>
    <center>
      <x-m>  3.515 </x-m>
      <y-m>  1.724 </y-m>
      <z-m> -0.705 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

  <!-- Rentrée des roues -->
  <!-- Roue avant -->
  <animation>
    <type>rotate</type>
    <object-name>axeA</object-name>
    <object-name>axeB</object-name>
    <object-name>roueA</object-name>
    <property>gear/gear[0]/position-norm</property>
    <interpolation>
      <entry>
        <ind>   0.0 </ind>
        <dep> 100.0 </dep>
      </entry>
      <entry>
        <ind> 1.0</ind>
        <dep> 0.0</dep>
      </entry>
    </interpolation>
    <center>
      <x-m> -3.728 </x-m>
      <y-m>  0.000 </y-m>
      <z-m> -0.783 </z-m>
    </center>
    <axis>
      <x> 0.000 </x>
      <y> 1.000 </y>
      <z> 0.000 </z>
    </axis>
  </animation>

