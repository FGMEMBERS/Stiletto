  <!-- Rotation de la roue avant en fonction de la gouverne de direction -->
  <animation>
   <type>rotate</type>
   <object-name>axeA</object-name>
   <object-name>axeB</object-name>
   <object-name>roueA</object-name>
   <property>controls/flight/rudder</property>
   <factor> 15.0 </factor>
   <center>
    <x-m> -3.748 </x-m>
    <y-m>  0.000 </y-m>
    <z-m> -1.622 </z-m>
   </center>
   <axis>
     <x>  0.000 </x>
     <y>  0.000 </y>
     <z> -1.000 </z>
   </axis>
  </animation>

  <!-- Compression -->
  <animation>
    <type>translate</type>
    <object-name>roueA</object-name>
    <object-name>axeB</object-name>
    <property>gear/gear[0]/compression-norm</property>
    <factor>0.3</factor>
    <axis>
      <x> 0.000 </x>
      <y> 0.000 </y>
      <z> 1.000 </z>
    </axis>
  </animation>

  <animation>
    <type>translate</type>
    <object-name>roueG</object-name>
